/* =========================
   GOOGLE FONTS
========================= */
@import url("https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Inter:wght@300;400;600&display=swap");

/* =========================
   COLOR VARIABLES
========================= */
:root {
  --blue: #1e3a5f;
  --teal: #2fa4a9;
  --gold: #d4af37;
  --gray: #f4f6f8;
  --dark-gray: #2b2b2b;
  --white: #ffffff;

  /* Dark Mode */
  --dark-bg: #121a24;
  --dark-card: #1f2a38;
  --dark-text: #e5eaf0;
}

/* =========================
   GLOBAL RESET
========================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* =========================
   BASE STYLES
========================= */
body {
  background: var(--gray);
  color: var(--dark-gray);
  font-family: "Inter", sans-serif;
  line-height: 1.6;
  transition: background 0.3s, color 0.3s;
}

h1, h2, h3 {
  font-family: "Cinzel", serif;
}

a {
  text-decoration: none;
  color: inherit;
}

/* =========================
   NAVBAR
========================= */
.navbar {
  background: linear-gradient(90deg, var(--blue), var(--teal));
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 30px;
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  color: var(--gold);
  font-size: 2rem;
  letter-spacing: 2px;
}

.navbar ul {
  list-style: none;
  display: flex;
  gap: 25px;
}

.navbar a {
  color: var(--white);
  font-weight: 500;
  position: relative;
}

.navbar a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -5px;
  width: 0%;
  height: 2px;
  background: var(--gold);
  transition: width 0.3s;
}

.navbar a:hover::after,
.navbar a.active::after {
  width: 100%;
}

/* =========================
   LAYOUT
========================= */
.container {
  max-width: 1100px;
  margin: auto;
  padding: 40px 20px;
}

/* =========================
   CARDS (Wiki Sections)
========================= */
.card {
  background: var(--white);
  padding: 25px;
  margin-bottom: 25px;
  border-radius: 8px;
  border-left: 6px solid var(--teal);
  box-shadow: 0 8px 20px rgba(0,0,0,0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.1);
}

/* =========================
   CHARACTER PROFILES
========================= */
.character {
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 20px;
  align-items: center;
}

.character img {
  width: 100%;
  border-radius: 50%;
  border: 3px solid var(--gold);
}

/* =========================
   SONGS & SAGAS
========================= */
.saga {
  margin-bottom: 20px;
}

.saga-title {
  width: 100%;
  background: var(--teal);
  color: white;
  padding: 14px;
  border: none;
  font-size: 1.1rem;
  cursor: pointer;
  border-radius: 6px;
  text-align: left;
  transition: background 0.3s;
}

.saga-title:hover {
  background: var(--blue);
}

.saga-content {
  display: none;
  background: var(--white);
  padding: 15px;
  border-radius: 6px;
}

.saga-content.open {
  display: block;
}

.song {
  background: none;
  border: none;
  color: var(--blue);
  cursor: pointer;
  font-weight: 600;
  margin-top: 10px;
}

.song:hover {
  color: var(--teal);
}

.lyrics {
  display: none;
  padding: 10px 15px;
  background: #f9f9f9;
  border-left: 4px solid var(--gold);
  margin-top: 8px;
}

.lyrics.open {
  display: block;
}


/* =========================
   SEARCH BAR
========================= */
.search-bar {
  margin-bottom: 30px;
}

.search-bar input {
  width: 100%;
  padding: 12px;
  border-radius: 6px;
  border: 2px solid var(--teal);
  font-size: 1rem;
}

/* =========================
   GALLERY
========================= */
.gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 20px;
}

.gallery img {
  width: 100%;
  border-radius: 8px;
  transition: transform 0.3s, box-shadow 0.3s;
}

.gallery img:hover {
  transform: scale(1.05);
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

/* =========================
   FOOTER
========================= */
footer {
  background: var(--blue);
  color: var(--white);
  text-align: center;
  padding: 20px;
  margin-top: 60px;
}

/* =========================
   DARK MODE
========================= */
body.dark {
  background: var(--dark-bg);
  color: var(--dark-text);
}

body.dark .card,
body.dark .saga-content {
  background: var(--dark-card);
}

body.dark footer,
body.dark .navbar {
  background: #0e1622;
}

/* =========================
   MOBILE RESPONSIVE
========================= */
@media (max-width: 768px) {
  .navbar {
    flex-direction: column;
    gap: 10px;
  }

  .character {
    grid-template-columns: 1fr;
    text-align: center;
  }
}
	/* Songs Page Layout */
.container.songs-layout {
  display: flex;
  gap: 20px;
  margin-top: 60px; /* navbar space */
}

.container.songs-layout .sagas {
  flex: 1;
  max-width: 400px;
}

.container.songs-layout .sidebar {
  flex: 2;
  padding: 20px;
  border-left: 1px solid rgba(255,255,255,0.1);
  background: linear-gradient(145deg, #1c1c33, #24244a);
}

body.dark .container.songs-layout .sidebar {
  background: linear-gradient(145deg, #101025, #18183a);
}

.song {
  background: none;
  border: none;
  cursor: pointer;
  font-weight: 600;
  color: var(--blue);
  margin: 6px 0;
  font-size: 15px;
  text-align: left;
  width: 100%;
}

.song:hover {
  color: var(--teal);
}

.sidebar h2 {
  font-size: 24px;
  margin-bottom: 8px;
}

.sidebar .characters {
  font-style: italic;
  color: #b7b7ff;
  margin-bottom: 12px;
}

.sidebar pre {
  white-space: pre-wrap;
  line-height: 1.6;
  font-size: 15px;
}

body.dark {
  background: #121212;
  color: white;
}

button {
  margin: 4px;
  cursor: pointer;
}
